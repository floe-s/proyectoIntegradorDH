<!DOCTYPE html>
<html lang="es">
  <head>
    <%-include('../partials/head') %> 
    <link rel="stylesheet" href="/css/cursos.css">
    <title>Cursos</title>
  </head>

<body class="body">

  <%-include('../partials/header') %>

  <main>
    <section class="principal">

      <div class="cabecera">
        <h1>CURSOS</h1>
        <label>Contamos con todos los idiomas que necesitas.</label>
      </div>

      <!--clases-->
      <% for(let i = 0; i < ps.length; i++) { %>
        <div class="cursos-info">
          <div class="superiro-curso"><a name="curso-aleman"></a>
            <label class="titulo"><%= ps[i].titule %> </label>
            <input class="btn-test" type="button" value="Iniciar Test">
            <!-- <div class="img-res">
              <img class="img-curso" src="img/paises/alemania-figuras.jpg" >
            </div> --> 
          
          </div>
          <section class="contenido-info">
            <div class="img-con">
              <img class="img-curso" src="../../img/paises/<%= ps[i].img %> " >
            </div>
          
          
            <table class="informacion">
              <tr class="titulo-colum">
                <th></th>
                <th>Niveles:</th>
                <th>Profesor/ra:</th>
                <th>Precio:</th>
              </tr>
              <tr>
                <td class="icon-info">
                  <button class="shop-cart-icon-button">
                    <i class="fa-solid fa-cart-shopping"></i>
                  </button>
                </td>
                <td>BÃ¡sico</td>
                <td><%= ps[i].profesorBasico%> </td>
                <td>$ <%= ps[i].precioBasico%> </td>
              </tr>
              <tr>
                <td class="icon-info">
                  <button class="shop-cart-icon-button">
                    <i class="fa-solid fa-cart-shopping"></i>
                  </button>
                </td>
                <td>Intermedio</td>
                <td><%= ps[i].profesorMedio%></td>
                <td>$ <%= ps[i].precioMedio%></td>
              </tr>
              <tr>
                <td class="icon-info">
                  <button class="shop-cart-icon-button">
                    <i class="fa-solid fa-cart-shopping"></i>
                  </button>
                </td>
                <td>Avanzado</td>
                <td><%= ps[i].profesorAvanzado%></td></td>
                <td>$ <%= ps[i].precioAvanzado%></td>
              </tr>
            </table>
          </section>
        </div>
      <% } %>  
    </section>
  </main>

  <%-include('../partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>