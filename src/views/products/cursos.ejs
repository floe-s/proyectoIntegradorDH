<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="//db.onlinewebfonts.com/c/d7e8a95865396cddca89b00080d2cba6?family=SoDo+Sans+SemiBold" rel="stylesheet" type="text/css"/>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" rel="stylesheet"/>
  <link rel="stylesheet" href="/css/cursos.css">
  <script src="https://kit.fontawesome.com/a4e61d7a9e.js"></script>
  <title>Cursos</title>
</head>
<body class="body">
  <%-include('../partials/header') %>
  <main>
    <section class="principal">

      <div class="cabecera">
        <h1>CURSOS</h1>
        <label>Contamos con todos los idiomas que necesitas.</label>
      </div>

      <!--clases-->
      <% for(let i = 0; i < ps.length; i ++) { %>
        <div class="cursos-info">
          <div class="superiro-curso"><a name="curso-aleman"></a>
            <label class="titulo"><%= ps[i].titule %> </label>
            <input class="btn-test" type="button" value="Iniciar Test">
            <div class="img-res">
              <img class="img-curso" src="img/paises/alemania-figuras.jpg" >
            </div>
          
          </div>
          <section class="contenido-info">
            <div class="img-con">
              <img class="img-curso" src="../../img/paises/<%= ps[i].img %> " >
            </div>
          
          
            <table class="informacion">
              <tr class="titulo-colum">
                <th></th>
                <th>Niveles:</th>
                <th>Profesor/ra:</th>
                <th>Precio:</th>
              </tr>
              <tr>
                <td class="icon-info">
                  <button class="shop-cart-icon-button">
                    <i class="fa-solid fa-cart-shopping"></i>
                  </button>
                </td>
                <td>BÃ¡sico</td>
                <td><%= ps[i].profesorBasico%> </td>
                <td>$ <%= ps[i].precioBaisco%> </td>
              </tr>
              <tr>
                <td class="icon-info">
                  <button class="shop-cart-icon-button">
                    <i class="fa-solid fa-cart-shopping"></i>
                  </button>
                </td>
                <td>Intermedio</td>
                <td><%= ps[i].profesormedio%></td>
                <td>$ <%= ps[i].precioMedio%></td>
              </tr>
              <tr>
                <td class="icon-info">
                  <button class="shop-cart-icon-button">
                    <i class="fa-solid fa-cart-shopping"></i>
                  </button>
                </td>
                <td>Avanzado</td>
                <td><%= ps[i].profesorAvanzado%></td></td>
                <td>$ <%= ps[i].precioAvanzado%></td>
              </tr>
            </table>
          </section>
        </div>
      <% } %>  
      
     
      
    </section>
  </main>

  <footer><%-include('../partials/footer') %> </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>