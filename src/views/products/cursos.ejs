<!DOCTYPE html>
<html lang="es">
  <head>
    <%-include('../partials/head') %> 
    <!-- {title: 'Todos los cursos'} -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css"/>
    <link rel="stylesheet" href="/css/cursos.css">
    <title>Cursos</title>
  </head>

  <body class="body">
    <%-include('../partials/header') %>

    <main>
      
      <section class="principal">

        <div class="cabecera">
          <h1>CURSOS</h1>
          <label>Contamos con todos los idiomas que necesitas.</label>
        </div>

        <div class="main">
          <% for(let curso of ps) {%> 
          <section class="setion">
            <div class="contenido-cursos">
              <figure class="img-cursos">
                <img src="/img/paises/<%= curso.img %> ">
              </figure>

              <section class="descripcion-cursos">
                <div class="titulo-curso">
                  <h2><%= curso.titulo %> </h2>
                </div>
                <div class="estudiantes">
                  <label><i class="fa-solid fa-circle-user"></i> <%= curso.estudiantes%> Estudiantes</label>
                </div>
                <div class="info-precios">
                  <div>
                    <img src="/img/iconCurso/<%= curso.imgNivel %>">
                    <label><%= curso.nivel %></label>
                  </div>
                    <label>$<%= curso.precio %></label>
                </div>
                <div class="profesor">
                  <label>Profesor/a:</label>
                  <label><%= curso.profesor %></label>
                </div> 
                <section class="horas-curso">
                  <div class="horas">
                      <label class="arriba-h"><%= curso.lecciones %> <i class="fa-regular fa-plus"></i></label>
                      <label class="abajo-h">lecciones</label>
                  </div>
                  <div class="horas">
                      <label class="arriba-h"><i class="fa-regular fa-clock"></i><%= curso.horas %></label>
                      <label class="abajo-h">horas</label>
                  </div>
                  <div class="horas">
                      <label class="arriba-h"><%= curso.puntuacion %><i class="fa-solid fa-star"></i></label>
                      <label class="abajo-h">Puntaje</label>
                  </div>
                </section>
                <div class="curso-agregar">
                  <% if(admi) {%> 
                  <div class="s-llave">
                    <a href="/producto/editar/<%= curso.id %> " class="llave"><i class="fa-solid fa-gear"></i></a>
                  </div>
                  <form action="/producto/eliminar/<%=curso.id%>?_method=DELETE" method="POST" >
                    <button id="eliminar" class="buttom" type="submit"><i class="fa-solid fa-trash"></i></button>
                  </form>
                  <% } %> 
                  <a  id="btn-curso" href="#">Agregar</a>
                  <div class="small-des">
                    <label for="<%= curso.idinput %>" class="plus"><i class="fa-solid fa-plus"></i></label>
                  </div>
                </div>
            </div>
            <div class="small-des">
              <input type="checkbox" id="<%= curso.idinput%>" class="input23">
              <p class="small-desescription"><%= curso.des %></p>
            </div>
            
          </section>
          <% } %>
        </div>
      </section>
    </main>

    <%-include('../partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>