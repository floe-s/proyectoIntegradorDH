<!DOCTYPE html>
<html lang="es">
  <head>
    <%-include('../partials/head') %> 
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css"/>
    <link rel="stylesheet" href="/css/cursos.css">
  </head>

  <body class="body">
    <%-include('../partials/header') %>

    <main>
      
      <section class="principal">

        <div class="cabecera">
          <h1><%= title %></h1>
          <label>Contamos con todos los idiomas que necesitas.</label>
        </div>

        <div class="main">
<!-- < % for (let curso_db of Allcursos) { %>
<h3>< %=curso_db %></h3>
< % } %> -->

          <% for(let curso of ps) {%> 
          <section class="setion">
            <div class="contenido-cursos">
              <figure class="img-cursos">
                <img  class="imgCur  <%=curso.imagen%>" src="/img/paises/<%= curso.imagen%> ">
              </figure>

              <section class="descripcion-cursos">
                <div class="titulo-curso">
                  <label style="display: none;" class="id"><%= curso.id %> </label>
                  <h2 class="nombreProducto"><%= curso.nombre %> </h2>
                </div>
                <div class="estudiantes">
                  <label><i class="fa-solid fa-circle-user"></i> <%= curso.estudiantes%> Estudiantes</label>
                </div>
                <div class="info-precios">
                  <div>
                    <img  src="/img/iconCurso/<%= curso.img_nivel%>">
                    <label class="nivelCurso"><%= curso.Nivel_curso_id  %></label>
                  </div>
                    <label>
                      $
                      <label class="precioCurso"><%= curso.precio %></label>
                    </label>
                </div>
                <div class="profesor">
                  <label id="profe">Profesor/a:</label>
                  <label class="profeCurso"><%= curso.Profesor_id %></label>
                </div> 
                <section class="horas-curso">
                  <div class="horas">
                      <label class="arriba-h"><%= curso.lecciones %> <i class="fa-regular fa-plus"></i></label>
                      <label class="abajo-h">Lecciones</label>
                  </div>
                  <div class="horas">
                      <label class="arriba-h"><i class="fa-regular fa-clock"></i><%= curso.cantidad_horas %></label>
                      <label class="abajo-h">Horas</label>
                  </div>
                  <div class="horas">
                      <label class="arriba-h"><%= curso.puntuacion %><i class="fa-solid fa-star"></i></label>
                      <label class="abajo-h">Puntaje</label>
                  </div>
                </section>
                <div class="curso-agregar">
                  <% if(admi) {%> 
                  <div class="s-llave">
                    <a href="/producto/editar/<%= curso.id %> " class="llave"><i class="fa-solid fa-gear"></i></a>
                  </div>
                  <form action="/producto/eliminar/<%=curso.id%>?_method=DELETE" method="POST" >
                    <button id="eliminar" class="buttom" type="submit"><i class="fa-solid fa-trash"></i></button>
                  </form>
                  <% } %> 
                  <a href="/producto/cursos" style="cursor: pointer;" id="btn-curso"   class="agreBtn  <%= curso.id %>">Agregar</a>
                  <div class="small-des">
                    <label for="<%= curso.imagen %>" class="plus"><i class="fa-solid fa-plus"></i></label>
                  </div>
                </div>
            </div>
            <div class="small-des" >
              <input type="checkbox" id="<%= curso.imagen%>" class="input23">
              <p class="small-desescription">  <%= curso.descripcion %></p>
            </div>
            
          </section>
          <% } %>
        </div>
      </section>
    </main>
    <%-include('../partials/footer') %>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/carritoNoti.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>