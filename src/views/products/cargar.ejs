<!DOCTYPE html>
<html lang="es">
    <head>
        <%-include('../partials/head') %> 
        <link rel="stylesheet" href="/css/cargar.css">
        <title>Cargar Curso</title>
      </head>

    <body class="body">
        <%-include('../partials/header') %> 
        
        <main>
            <figure class="img-figure">
                <img src="../../../img/production.svg" >
                <label>No olviden llenar todos los campos!</label>
            </figure>
            <div class="cont">
                <div class="img-curso">
                    <h2 id="titulo">Cargar Curso</h2>
                    <a class="btn-volver" href="/usuario/vista-perfil">Volver</a>
                </div>
                <form class="form-cargar" action="/producto/cargar" method="POST" enctype="multipart/form-data">
                    <input type="text" name="titulo" placeholder="Nombre del curso:" >
                    <% if (locals && locals.errors) { %>
                        <% if (locals.errors[0].param == "titulo") { %>
                          <h3 class="errors-validation"> <%= locals.errors[0].msg %> </h3>
                        <% } %>
                      <% } %>

                    <section class="inpu">
                        <div class="tex-ifo"> 
                            <% if (locals && locals.errors) { %>
                                <% if (locals.errors[0].param == "profesor") { %>
                                  <h3 class="errors-validation"> <%= locals.errors[0].msg %> </h3>
                                <% } %>
                              <% } %>
                            <input class="pro" type="text" name="profesor" placeholder="ID del Profesor/ra:">

                            <% if (locals && locals.errors) { %>
                                <% if (locals.errors[0].param == "precio") { %>
                                  <h3 class="errors-validation"> <%= locals.errors[0].msg %> </h3>
                                <% } %>
                              <% } %>
                            <input class="precio" type="text" name="precio" placeholder="Precio:">
                            
                        </div>
                        <div class="inf-basica">
                            <div class="div">
                                <label><i class="fa-solid fa-circle-user"></i> Est.</label>
                                <input type="text" name="estudiantes">
                                <% if (locals && locals.errors) { %>
                                    <% if (locals.errors[0].param == "estudiantes") { %>
                                      <h3 class="errors-validation"> <%= locals.errors[0].msg %> </h3>
                                    <% } %>
                                  <% } %>
                            </div>
                            <div class="div">
                                <label>Lecciones</label>
                                <input type="text" name="lecciones">
                                <% if (locals && locals.errors) { %>
                                    <% if (locals.errors[0].param == "lecciones") { %>
                                      <h3 class="errors-validation"> <%= locals.errors[0].msg %> </h3>
                                    <% } %>
                                  <% } %>
                            </div>
                            <div class="div">
                                <label><i class="fa-regular fa-clock"></i> Horas</label>
                                <input type="text" name="horas">
                                <% if (locals && locals.errors) { %>
                                    <% if (locals.errors[0].param == "horas") { %>
                                      <h3 class="errors-validation"> <%= locals.errors[0].msg %> </h3>
                                    <% } %>
                                  <% } %>
                            </div>
                            <div class="div">
                                <label><i class="fa-solid fa-star"></i> Punt.</label>
                                <input type="text" name="puntuacion">
                                <% if (locals && locals.errors) { %>
                                    <% if (locals.errors[0].param == "puntuacion") { %>
                                      <h3 class="errors-validation"> <%= locals.errors[0].msg %> </h3>
                                    <% } %>
                                  <% } %>
                            <div>
                        </div>
                    </section>
                    <div class="final">
                        <div class="file">
                            <input name="imgProduct" type="file" required>
                        </div>
                        <div class="check-form">
                            <label>Nivel de dificultad:</label>
                            <select class="select" name="nivel" >
                                <option selected value="basico">Básico</option>
                                <option value="intermedio">Intermedio</option>
                                <option value="avanzando">Avanzado</option>
                            </select>
                        </div>
                        <div class="form-descrip">
                            <textarea placeholder="Descripción..." class="descripcion" maxlength="125" name="descripcion" id="" cols="2" rows="5"></textarea>
                        </div>
                        <% if (locals && locals.errors) { %>
                            <% if (locals.errors[0].param == "descripcion") { %>
                              <h3 class="errors-validation"> <%= locals.errors[0].msg %> </h3>
                            <% } %>
                          <% } %>
                        <div class="btn">
                            <button type="submit">Agregar</button>
                        </div>
                    </div>
                </form>
            </div>
        </main>

        <%- include('../partials/footer') %>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
    </body>
    
</html>