<!DOCTYPE html>
<html lang="es">
  <head>
    <%-include('../partials/head') %> 
    <link rel="stylesheet" href="/css/editar-usuario.css">
    <title>Editar Perfil</title>
  </head>

<body class="body">
  
  <%-include('../partials/header') %>

  <div class="marco">
    <form class="form-perfil" action="/usuario/perfil" method="GET" >
        <a href="/usuario/vista-perfil" class="volv">Volver</a>
    </form>
  <div class="titulo">
    <p>Informacion de la cuenta</p>
  </div>
    <form class="form-cargar" action="/usuario/editar-usuario" method="POST" enctype="multipart/form-data"> <!-- action="/usuario/editar-usuario/< %= us.id %>?_method=PUT" method="POST" enctype="multipart/form-data"  -->
        <section>
            <div class="file">
              <div class="cont-imgp">
                <img src="/img/perfil/166812825746520210706_225050.jpg" class="imgpf">
              </div>
              <input name="profileimg" type="file" required>
            </div>
            <div class="inputs">
              <!-- <label><i class="fa-solid fa-circle-user"></i></label> -->
              <input class="" type="text" name="nombres" placeholder="<%- i.nombre %>">
              <% if (locals && locals.errors) { %>
                <% if (locals.errors[0].param == "nombres") { %>
                  <h3 class="errors-validation"> <%= locals.errors[0].msg %> </h3>
                <% } %>
              <% } %>
              <input class="" type="text" name="apellidos" placeholder="<%- i.apellido %>">
              <% if (locals && locals.errors) { %>
                <% if (locals.errors[0].param == "apellidos") { %>
                  <h3 class="errors-validation"> <%= locals.errors[0].msg %> </h3>
                <% } %>
              <% } %>
              <input class="" type="text" name="email" placeholder="<%- i.email%>">
              <% if (locals && locals.errors) { %>
                <% if (locals.errors[0].param == "email") { %>
                  <h3 class="errors-validation"> <%= locals.errors[0].msg %> </h3>
                <% } %>
              <% } %>
              <input class="" type="text" name="telefono" placeholder="<%- i.telefono%>">
              <% if (locals && locals.errors) { %>
                <% if (locals.errors[0].param == "telefono") { %>
                  <h3 class="errors-validation"> <%= locals.errors[0].msg %> </h3>
                <% } %>
              <% } %>
            </div>
            <div class="inputs">
              <div class="pasw-tit"><p>Cambio de contrase√±a</p></div>
              <input class="" type="text" name="oldpassword" placeholder="Password actual">
            </div>
            <a> <button type="submit" id="boton-enviar">Confirmar</button> </a>
        </section>
    </form>
  </div>

  <%-include('../partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>